<% if @tasks.count == 0 %>
  <h1>No Tasks Yet</h1>
<% end %>
<ul id="sortable" style="list-style-type: none;">
  <% @tasks.each do |task| %>
    <li>
      <div class="panel panel-default" style="margin-top: 10px">
        <div class="panel panel-body task-body-<%= task.id %>" style="margin-bottom: 0px;" >
          <div class="col-md-1">
            <input type="checkbox"  <%= 'checked' if task.is_completed %> class="task-checkbox" data-task-id="<%= task.id %>">
          </div>
          <div class="col-md-7">
            <% if task.is_completed %>
              <span class="description-<%= task.id %>" style="text-decoration: line-through"><%= task.description.upcase %></span>
            <%else%>
              <span class="description-<%= task.id %>"><%= task.description.upcase %></span>
            <%end%>
          </div>
          <div class="col-md-2">
            <%= link_to edit_task_path(task) ,data: {remote: true} do %>
              <span class="description-edit-<%= task.id %>"><i class="fa fa-edit"></i></span>
            <%end%>
          </div>
          <%= link_to task, method: :delete, data: { confirm: 'Are you sure?',remote: true } do %>
            <span><i class="fa fa-trash" ></i></span>
          <% end%>
        </div>
      </div>
    </li>
  <% end %>
</ul>